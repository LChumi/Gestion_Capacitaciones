<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPrograma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imgPrograma"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:background="@drawable/icon_grade_white"/>

            <TextView
                android:id="@+id/txtPrograma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgPrograma"
                android:layout_alignRight="@+id/imgPrograma"
                android:layout_alignBottom="@+id/imgPrograma"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/txtNomPrograma"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="12sp" />


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>