<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DAE4F4"
    tools:context=".UI.ui.perfil.PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/PerfilD"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hammersmith_one"
                android:text="@string/txtPerfilD"
                android:textAlignment="center"
                android:textSize="14dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/imgFotoUser"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_perfil_inicio" />

                    <TextView
                        android:id="@+id/txtNombresP"
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgFotoUser"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="@font/san_francisco"
                        android:gravity="center"
                        android:text="@string/txtPerfil"
                        android:textColor="#000"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txtCargo"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNombresP"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/valueUsuario"
                        android:textStyle="bold" />

                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="270dp"
                        android:layout_height="220dp"
                        android:layout_gravity="end"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/edtCedulaP"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueCedula"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txtCedulaP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edtCedulaP"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueCedula"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/edtEmailD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtCedulaP"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueCorreo"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txtEmailD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edtEmailD"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueCorreo"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/edtTelefonoD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtEmailD"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueNroTelefeono"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txtTelefonoD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edtTelefonoD"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueNroTelefeono"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/edtCelularD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtTelefonoD"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueNroTelefonoCelular"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txtCelularD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edtCelularD"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueNroTelefonoCelular"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/edtDirecciónD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtCelularD"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueDireccionP"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txtDirecciónD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edtDirecciónD"
                            android:fontFamily="@font/san_francisco"
                            android:text="@string/valueDireccionP"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </ScrollView>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/viewNivelD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueNivelInstruccion"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/txtNivelD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueNivelInstruccion"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/viewFechaD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueFechaNacimiento"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/txtFechaD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueFechaNacimiento"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/viewGeneroD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueSexo"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/txtGeneroD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueSexo"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/viewEtniaD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueEtnia"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/txtEtniaD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/san_francisco"
                                    android:text="@string/valueEtnia"
                                    android:textSize="14dp" />


                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/CursoD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/hammersmith_one"
                    android:text="@string/txtCursosD"
                    android:textSize="14dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <GridView
                                    android:id="@+id/gvMisCursos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:numColumns="3" />
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>